<Page x:Class="ProjektSemestralny.Views.Customers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektSemestralny.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="620"
      Title="Customers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"
                           />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Customers List "                    
                     FontSize="30"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"                   
                     Grid.Column="1"                                   
                    Foreground="white"/>
        <Button Width="100"
                     Height="30"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"
                     Margin="10"
                     Grid.Column="1"
                    Background="#3D4A51"
                    Content="Add customer" 
                    Click="AddCustomerButton_Click"
                    Foreground="white"/>
        <DataGrid  Grid.Row="1"
                              x:Name="Customer"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="#3D4A51">
            <DataGrid.Columns>
                <DataGridTextColumn Width="3*" Header="ID"  />
                <DataGridTextColumn Width="3*" Header="Imie"  />
                <DataGridTextColumn Width="3*" Header="Nazwisko"  />
                <DataGridTextColumn Width="3*" Header="Adres" />
                <DataGridTextColumn Width="3*" Header="Numer telefonu" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ButtonDeleteCustomer_Click">Usuń</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
